<h1>Burgers!</h1>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> cats/cat-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Not Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> cats/cat-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Not Eaten<br>
    <input type="radio" name="sleepy" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
